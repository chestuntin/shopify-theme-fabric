{% doc %}
  @prompt
    Create a holographic glow effect for text with an iridescent, multi-colored shimmer. The effect should include animated rainbow-like colors (purple, blue, cyan, pink, magenta) that create a futuristic holographic appearance with a glowing aura around the text. The glow should be vibrant and eye-catching with smooth color transitions., make only the border hologrpahic. give border options.  also offer smaller font sizes.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-holographic-text-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    text-align: {{ block.settings.text_alignment }};
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-holographic-text__wrapper-{{ ai_gen_id }} {
    display: inline-block;
    position: relative;
    padding: {{ block.settings.border_width }}px;
    border-radius: {{ block.settings.border_radius }}px;
    background: linear-gradient(
      90deg,
      #a855f7,
      #3b82f6,
      #06b6d4,
      #ec4899,
      #d946ef,
      #a855f7
    );
    background-size: 200% 100%;
    filter: drop-shadow(0 0 {{ block.settings.glow_intensity }}px rgba(168, 85, 247, 0.8))
            drop-shadow(0 0 {{ block.settings.glow_intensity | times: 1.5 }}px rgba(59, 130, 246, 0.6))
            drop-shadow(0 0 {{ block.settings.glow_intensity | times: 2 }}px rgba(236, 72, 153, 0.4));
  }

  {% if block.settings.enable_animation %}
    .ai-holographic-text__wrapper-{{ ai_gen_id }} {
      animation: ai-holographic-shimmer-{{ ai_gen_id }} {{ block.settings.animation_speed }}s linear infinite;
    }

    @keyframes ai-holographic-shimmer-{{ ai_gen_id }} {
      0% {
        background-position: 0% 50%;
      }
      100% {
        background-position: 200% 50%;
      }
    }
  {% endif %}

  .ai-holographic-text__inner-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius | minus: 2 }}px;
    padding: {{ block.settings.text_padding_vertical }}px {{ block.settings.text_padding_horizontal }}px;
  }

  .ai-holographic-text__content-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    margin: 0;
    color: {{ block.settings.text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-holographic-text__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<holographic-text-{{ ai_gen_id }}
  class="ai-holographic-text-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-holographic-text__wrapper-{{ ai_gen_id }}">
    <div class="ai-holographic-text__inner-{{ ai_gen_id }}">
      {% if block.settings.heading_tag == 'h1' %}
        <h1 class="ai-holographic-text__content-{{ ai_gen_id }}">{{ block.settings.text }}</h1>
      {% elsif block.settings.heading_tag == 'h2' %}
        <h2 class="ai-holographic-text__content-{{ ai_gen_id }}">{{ block.settings.text }}</h2>
      {% elsif block.settings.heading_tag == 'h3' %}
        <h3 class="ai-holographic-text__content-{{ ai_gen_id }}">{{ block.settings.text }}</h3>
      {% elsif block.settings.heading_tag == 'h4' %}
        <h4 class="ai-holographic-text__content-{{ ai_gen_id }}">{{ block.settings.text }}</h4>
      {% elsif block.settings.heading_tag == 'h5' %}
        <h5 class="ai-holographic-text__content-{{ ai_gen_id }}">{{ block.settings.text }}</h5>
      {% elsif block.settings.heading_tag == 'h6' %}
        <h6 class="ai-holographic-text__content-{{ ai_gen_id }}">{{ block.settings.text }}</h6>
      {% else %}
        <p class="ai-holographic-text__content-{{ ai_gen_id }}">{{ block.settings.text }}</p>
      {% endif %}
    </div>
  </div>
</holographic-text-{{ ai_gen_id }}>

<script>
  (function() {
    class HolographicText{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('holographic-text-{{ ai_gen_id }}', HolographicText{{ ai_gen_id }});
  })();
</script>

