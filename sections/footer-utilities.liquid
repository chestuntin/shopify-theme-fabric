
{% liquid
  # Override color scheme for specific pages
  assign footer_color_scheme = section.settings.color_scheme
  if page.handle == 'what-we-make' or template.name == 'product' or page.handle == 'contact' or template.name == 'collection' or template.name == '404' or template.name == 'cart' or template.name == 'policy' or request.path contains '/policies/'
    assign footer_color_scheme = 'scheme-1'
  endif
%}

<div class="section-background color-{{ footer_color_scheme }}"></div>
<div
  class="section section--{{ section.settings.section_width }} color-{{ footer_color_scheme }}"
  {{ section.shopify_attributes }}
>
  <div
    class="utilities spacing-style {% unless section.settings.mobile_horizontal_layout %}utilities--mobile-stacked{% endunless %}"
    style="{% render 'spacing-style', settings: section.settings %} --border-width: {{ section.settings.divider_thickness }}px; --gap: {{ section.settings.gap }}px;"
    data-testid="footer-utilities"
  >
    {% content_for 'blocks' %}

  </div>
</div>

{% stylesheet %}
  /* Force correct vertical alignment for all footer items and strip margins */
  .utilities > * {
    align-self: center !important;
    margin: 0 !important;
    padding: 0 !important;
  }

  .utilities > * :where(p, a, span, div, h1, h2, h3, h4, h5, h6, small, ul, li) {
    margin: 0 !important;
    /* padding: 0 !important; - safer to leave padding for buttons etc */
  }

  .utilities ul {
     margin: 0 !important;
     padding: 0 !important;
     list-style: none;
  }


  .utilities {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    justify-content: center;
    gap: var(--gap);
    align-items: center;
    text-wrap: nowrap;
    border-top: var(--border-width) solid var(--color-border);
    color: var(--color-foreground-muted);
    text-align: left;
    position: relative;
  }

  /* Stacked mobile layout when toggle is off */
  .utilities--mobile-stacked {
    @media screen and (max-width: 749px) {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  }

  .utilities a {
    color: var(--color-foreground-muted);
  }

  .utilities > * {
    text-align: left;
  }

  /* Center text alignment on mobile when stacked */
  .utilities--mobile-stacked > * {
    @media screen and (max-width: 749px) {
      text-align: center;
    }
  }

  /* Dynamic positioning based on block order */
  @media screen and (min-width: 750px) {
    /* Reset default positioning */
    .utilities > * {
      order: 0;
      margin-left: 0;
      margin-right: 0;
      position: static;
    }

    /* Exactly 3 items cases: */
    /* A : A : B => A left, A left, B right */
    /* Example: Copyright and policy left, social right */
    .utilities:has(
        .footer-utilities__text:nth-child(1)
          + .footer-utilities__text:nth-child(2)
          + .footer-utilities__icons:nth-child(3)
      ) {
      grid-template-columns: auto auto 1fr;

      .footer-utilities__icons:nth-child(3) {
        justify-content: end;
      }
    }

    /* A : B : A => A left, B center, A right */
    /* Example: Policy left, Socials center, Copyright right */
    .utilities:has(
        .footer-utilities__text:nth-child(1)
          + .footer-utilities__icons:nth-child(2)
          + .footer-utilities__text:nth-child(3)
      ) {
      grid-template-columns: 1fr auto 1fr;

      .footer-utilities__icons:nth-child(2) {
        justify-self: center;
      }

      .footer-utilities__text:nth-child(3) {
        justify-self: end;
      }
    }

    /* B : A : A => B left, A right, A right */
    /* Example: Socials left, Policy right, Copyright right */
    .utilities:has(
        .footer-utilities__icons:nth-child(1)
          + .footer-utilities__text:nth-child(2)
          + .footer-utilities__text:nth-child(3)
      ) {
      grid-template-columns: 1fr auto auto;

      .footer-utilities__text:nth-child(3) {
        justify-content: end;
      }
    }

    /* Exactly 2 items cases: */
    /* A : A => A left, A left */
    /* Example: Copyright left, Policy left */
    .utilities:has(.footer-utilities__text:first-child:nth-last-child(2) + .footer-utilities__text:last-child) {
      grid-template-columns: auto auto;
      justify-content: space-between;

      .footer-utilities__text:nth-child(2) {
        justify-self: end;
      }
    }

    /* B : A => B left, A right */
    /* Example: Socials left, Policy right */
    .utilities:has(.footer-utilities__icons:first-child:nth-last-child(2) + .footer-utilities__text:last-child) {
      grid-template-columns: 1fr 1fr;

      .footer-utilities__text:nth-child(2) {
        justify-self: end;
      }
    }

    /* A : B => A left, B right */
    /* Example: Socials left, Policy right */
    .utilities:has(.footer-utilities__text:first-child:nth-last-child(2) + .footer-utilities__icons:last-child) {
      grid-template-columns: 1fr 1fr;

      .footer-utilities__icons:nth-child(2) {
        justify-self: end;
      }
    }

    /* Exactly 1 items cases: */
    /* A => A left */
    /* Example: Policy left */
    .utilities:has(.footer-utilities__text:first-child:nth-last-child(1)) {
      grid-template-columns: 1fr;
      justify-content: start;

      .footer-utilities__text:nth-child(1) {
        justify-self: start;
      }
    }

    /* B => B left */
    /* Example: Socials left */
    .utilities:has(.footer-utilities__icons:first-child:nth-last-child(1)) {
      grid-template-columns: 1fr;
      justify-content: start;

      .footer-utilities__icons:nth-child(1) {
        justify-self: start;
      }
    }

    /* Fallback: Generic 3-item layout for Desktop */
    .utilities:has(> :nth-child(3):last-child) {
      display: grid;
      grid-template-columns: 1fr auto 1fr;
      align-items: center;
    }
    .utilities:has(> :nth-child(3):last-child) > :nth-child(2) {
      justify-self: center;
    }
    .utilities:has(> :nth-child(3):last-child) > :nth-child(3) {
      justify-self: end;
    }

    /* FORCE GRID always for desktop with STRICT PLACEMENT */
    .utilities:not(.utilities--mobile-stacked) {
       display: grid !important;
       grid-template-columns: 1fr auto 1fr !important;
       align-items: center !important;
    }
    .utilities:not(.utilities--mobile-stacked) > * {
       order: initial !important;
       margin: 0 !important;
       grid-row: 1 !important; /* Force all to same line */
    }

    /* Assign Specific Columns regardless of Order */
    /* Left: Copyright */
    .utilities:not(.utilities--mobile-stacked) .footer-utilities__group-copyright {
       grid-column: 1;
       justify-self: start !important;
    }

    /* Center: Payment Icons */
    .utilities:not(.utilities--mobile-stacked) .footer-utilities__icons {
       grid-column: 2;
       justify-self: center !important;
    }

    /* Right: Policy List */
    .utilities:not(.utilities--mobile-stacked) .footer-utilities__policy-list {
       grid-column: 3;
       justify-self: end !important;
    }
    
  }

  /* Apply dynamic positioning to mobile when horizontal layout is enabled */
  @media screen and (max-width: 749px) {
    .utilities:not(.utilities--mobile-stacked) {
      position: relative;
    }

    .utilities:not(.utilities--mobile-stacked) > * {
      order: 0;
      margin-left: 0;
      margin-right: 0;
      position: static;
    }

    /* Exactly 3 items cases: */
    /* A : A : B => A left, A left, B right */
    .utilities:not(.utilities--mobile-stacked):has(
        .footer-utilities__text:nth-child(1)
          + .footer-utilities__text:nth-child(2)
          + .footer-utilities__icons:nth-child(3)
      ) {
      grid-template-columns: auto auto 1fr;

      .footer-utilities__icons:nth-child(3) {
        justify-content: end;
      }
    }

    /* A : B : A => A left, B center, A right */
    .utilities:not(.utilities--mobile-stacked):has(
        .footer-utilities__text:nth-child(1)
          + .footer-utilities__icons:nth-child(2)
          + .footer-utilities__text:nth-child(3)
      ) {
      grid-template-columns: 1fr auto 1fr;

      .footer-utilities__icons:nth-child(2) {
        justify-self: center;
      }

      .footer-utilities__text:nth-child(3) {
        justify-self: end;
      }
    }

    /* B : A : A => B left, A right, A right */
    .utilities:not(.utilities--mobile-stacked):has(
        .footer-utilities__icons:nth-child(1)
          + .footer-utilities__text:nth-child(2)
          + .footer-utilities__text:nth-child(3)
      ) {
      grid-template-columns: 1fr auto auto;

      .footer-utilities__text:nth-child(3) {
        justify-content: end;
      }
    }

    /* Exactly 2 items cases: */
    /* A : A => A left, A left */
    .utilities:not(.utilities--mobile-stacked):has(.footer-utilities__text:first-child:nth-last-child(2) + .footer-utilities__text:last-child) {
      grid-template-columns: auto auto;
      justify-content: space-between;

      .footer-utilities__text:nth-child(2) {
        justify-self: end;
      }
    }

    /* B : A => B left, A right */
    .utilities:not(.utilities--mobile-stacked):has(.footer-utilities__icons:first-child:nth-last-child(2) + .footer-utilities__text:last-child) {
      grid-template-columns: 1fr 1fr;

      .footer-utilities__text:nth-child(2) {
        justify-self: end;
      }
    }

    /* A : B => A left, B right */
    .utilities:not(.utilities--mobile-stacked):has(.footer-utilities__text:first-child:nth-last-child(2) + .footer-utilities__icons:last-child) {
      grid-template-columns: 1fr 1fr;

      .footer-utilities__icons:nth-child(2) {
        justify-self: end;
      }
    }

    /* Exactly 1 items cases: */
    /* A => A left */
    .utilities:not(.utilities--mobile-stacked):has(.footer-utilities__text:first-child:nth-last-child(1)) {
      grid-template-columns: 1fr;
      justify-content: start;

      .footer-utilities__text:nth-child(1) {
        justify-self: start;
      }
    }

    .utilities:not(.utilities--mobile-stacked):has(.footer-utilities__icons:first-child:nth-last-child(1)) {
      grid-template-columns: 1fr;
      justify-content: start;

      .footer-utilities__icons:nth-child(1) {
        justify-self: start;
      }
    }
    
    /* Fallback: Generic 3-item layout (Left - Center - Right) */
    .utilities:not(.utilities--mobile-stacked):has(> :nth-child(3):last-child) {
       display: grid;
       grid-template-columns: 1fr auto 1fr;
       align-items: center;
    }
    .utilities:not(.utilities--mobile-stacked):has(> :nth-child(3):last-child) > :nth-child(2) {
       justify-self: center;
    }
    .utilities:not(.utilities--mobile-stacked):has(> :nth-child(3):last-child) > :nth-child(3) {
       justify-self: end;
    }

  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.policies_and_links",
  "tag": "div",
  "class": "footer-utilities",
  "max_blocks": 5,
  "enabled_on": {
    "groups": ["footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "divider_thickness",
      "label": "t:settings.divider_thickness",
      "min": 0,
      "max": 5,
      "step": 0.5,
      "unit": "px",
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "mobile_horizontal_layout",
      "label": "Mobile horizontal layout",
      "default": true,
      "info": "When enabled, mobile matches desktop layout (left-right). When disabled, blocks stack vertically on mobile."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "footer-copyright"
    },
    {
      "type": "footer-policy-list"
    },
    {
      "type": "social-links"
    },
    {
      "type": "payment-methods"
    }
  ],
  "presets": [
    {
      "name": "t:names.policies_and_links",
      "category": "t:categories.footer",
      "blocks": {
        "copyright": {
          "type": "footer-copyright"
        },
        "policy_list": {
          "type": "footer-policy-list"
        },
        "social_icons": {
          "type": "social-links"
        }
      },
      "block_order": ["copyright", "policy_list", "social_icons"]
    }
  ]
}
{% endschema %}
