<div class="scroll-indicator" id="scrollIndicator">
  <svg class="scroll-indicator__svg" viewBox="0 0 43 43" xmlns="http://www.w3.org/2000/svg">
    <!-- Background circle -->
    <circle
      class="scroll-indicator__circle-bg"
      cx="21.5"
      cy="21.5"
      r="20"
      fill="none"
      stroke="white"
      stroke-width="3.5"
      opacity="0.25"
    />
    
    <!-- Progress circle -->
    <circle
      class="scroll-indicator__circle-progress"
      cx="21.5"
      cy="21.5"
      r="20"
      fill="none"
      stroke="black"
      stroke-width="2.5"
      stroke-linecap="round"
      transform="rotate(-90 21.5 21.5)"
    />
    
    <!-- Down arrow - centered at 21.5, 21.5 -->
    <g class="scroll-indicator__arrow">
      <line x1="21.5" y1="13.5" x2="21.5" y2="29.5" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
      <polyline points="17.5,25.5 21.5,29.5 25.5,25.5" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
    </g>
  </svg>
</div>
